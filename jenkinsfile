pipeline{

      agent any
        tools {
     jdk 'JAVA_HOME'
     maven 'M2_HOME'
        
  }
     
        
        stages{


                            stage('Test unitaires & Mock tests') {
                              steps {
                               script {
                                sh 'echo "Test is processing ...."'
                                sh 'mvn clean test'
                               }

                              }

                            }

              stage('SonarQube') {
            steps {
                sh "./mvnw sonar:sonar -DskipTests=true -Dsonar.host.url=http://192.168.1.2:9000 -Dsonar.login=admin -Dsonar.password=sonar"
            }
	    }
		stage("building jar") {
            steps {
                script {
                    sh "mvn package -DskipTests=true"
                }
            }
        }
	        stage('Building image Docker'){
            steps{
                script{
                    sh 'docker build -t zaynebchniba/springprojet .'
                }
            }
        }
	        stage('Pushing image to DockerHub'){
            steps{
                script{
		withCredentials([string(credentialsId: 'dockerhub-pwd', variable: 'dockerhubpwd')]) {
                   sh 'docker login -u zaynebchniba -p $dockerhubpwd docker.io'
}

                   sh 'docker push zaynebchniba/springprojet:latest'
                }
            }
        }


}
}
