pipeline{

      agent any
        tools {
     jdk 'JAVA_HOME' 
     maven 'M2_HOME'
  }
     
        
        stages{  


                            stage('Testing') {
                              steps {
                               script {
                                sh 'echo "Test is processing ...."'
                                sh 'mvn clean test'
                               }

                              }

                            }

               stage('sonnarqube'){
                  steps{
                      script{
			      withSonarQubeEnv('sonar') {
			      sh "mvn compile sonar:sonar"
                       	     	}
			      timeout(time: 1, unit: 'HOURS') {
			      def qg = waitForQualityGate()
				      if (qg.status != 'OK') {
					   error "Pipeline aborted due to quality gate failure: ${qg.status}"
				      }
                    		}
		    	    sh "mvn clean install"

                 	}
               	 }
              }
		stage("fichier .jar") {
            steps {
                script {
                    sh "mvn package -DskipTests=true"
                }
            }
        }
	        stage('Image docker'){
            steps{
                script{
                    sh 'docker build -t yasmine1998/springprojet .'
                }
            }
        }
	        stage('image dockerhub'){
            steps{
                script{
		withCredentials([string(credentialsId: 'dockerhub-pwd1', variable: 'dockerhubpwd1')]) {
                   sh 'docker login -u yasmine1998 -p $dockerhubpwd1 docker.io'
}

                   sh 'docker push yasmine1998/springprojet:latest'
                }
            }
        }
		        stage('Docker compose'){
            steps{
                script{
                   // sh 'docker build -t yasmine1998/springprojet .'
                }
            }
        }
	

}
}
